@page "/facultyform"
@using Assignment.Model;

<h3>Faculty Information</h3>

@if (isFormSubmitted)
{
    <p>Form submitted successfully!</p>
}
else
{
    <form @onsubmit="SubmitForm">
        <div class="form-group">
            <label for="fid">Faculty ID:</label>
            <input type="text" id="fid" @bind="faculty.fid" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="fname">Faculty Name:</label>
            <input type="text" id="fname" @bind="faculty.fname" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="deptid">Department ID:</label>
            <input type="number" id="deptid" @bind="faculty.deptid" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="standing">Standing:</label>
            <input type="text" id="standing" @bind="faculty.standing" class="form-control" required>
        </div>

        <!-- You can include additional fields for Class if needed -->

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}

@code {
    private Faculty faculty = new Faculty();
    private bool isFormSubmitted = false;

    private void SubmitForm()
    {
        isFormSubmitted = true;
    }
}

