@page "/classform"
@using Assignment.Model;

<h3>Class Information</h3>

@if (isFormSubmitted)
{
    <p>Form submitted successfully!</p>
}
else
{
    <form @onsubmit="SubmitForm">
        <div class="form-group">
            <label for="cid">Class ID:</label>
            <input type="text" id="cid" @bind="classModel.cid" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="name">Class Name:</label>
            <input type="text" id="name" @bind="classModel.name" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="room_number">Room Number:</label>
            <input type="text" id="room_number" @bind="classModel.room_number" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="fid">Faculty ID:</label>
            <input type="number" id="fid" @bind="classModel.fid" class="form-control" required>
        </div>

        <!-- You can include additional fields for Faculty if needed -->

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}

@code {
    private Class classModel = new Class();
    private bool isFormSubmitted = false;

    private void SubmitForm()
    {
      
        isFormSubmitted = true;
    }
}
